<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_content_margin_top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/garageInfoLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/content_background"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/garageNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/parkingSpaceCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@id/garageNameView"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/parkingSpceUsageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@id/parkingSpaceCountView"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/reserveParkingSpaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@id/parkingSpceUsageView"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/remainingParkingSpaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@id/reserveParkingSpaceView"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/addressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@id/remainingParkingSpaceView"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addressView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/showParkingSpaceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/primary_bg_single_selector"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/white"
        android:text="查看车位"
        app:layout_constraintTop_toBottomOf="@id/garageInfoLayout"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>